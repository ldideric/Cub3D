	"codamheader.ChangeAuthor": true,
	"codam-norminette.command2": "python ~/norminette+/run.py",

	"actionButtons":
	{
		"reloadButton": "<{o}>",
		"defaultColor": "white",
		"commands":
		[
			{
				"name": "# ON",
				"color": "blue",
				"command": "sed -i \"\" '/sed/!s/\"#600000/\"#eb4545/' .vscode/settings.json",
			},
			{
				"name": "# OFF",
				"color": "blue",
				"command": "sed -i \"\" '/sed/!s/\"#eb4545/\"#600000/' .vscode/settings.json",
			},
			{
				"name": "JSON",
				"command": "code ./.vscode/settings.json",
			},
			{
				"name": "|",
				"color": "black"
			},
			{
				"name": "make",
				"color": "Lightcoral",
				"command": "make",
			},
			{
				"name": "make re",
				"color": "Lightpink",
				"command": "make re MLX=1 DEBUG=1",
			},
			{
				"name": "make bonus",
				"color": "Lightpink",
				"command": "make bonus",
			},
			{
				"name": "RUN",
				"color": "Lightyellow",
				"command": "./cub3D maps/map.cub",
			},
		]
	},

	"editor.rulers": [80],
	"workbench.colorCustomizations":
		{"editorRuler.foreground": "#53afe0"},
	"editor.tokenColorCustomizations":
		{"comments": "#eb4545"},

	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "all",
	"files.autoSave": "afterDelay",
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"files.associations": {
		"algorithm": "c"
	},
}
